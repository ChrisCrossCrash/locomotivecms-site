---
<footer class="footer">
  <div class="container">
    <div class="columns is-multiline is-mobile">
      <div class="column is-full-touch">
        <a href="{% path_to home %}" class="footer-brand">
          <img src="{{ 'logo-black.png' | theme_image_url | resize: '280x>' }}" alt="{{ site.seo_title }}">
        </a>
      </div>

      {% for block in section.blocks %}

        {% if block.type == 'column' %}

          {% unless forloop.first %}</div>{% endunless %}

          <div class="column {% if forloop.first %}is-offset-1-desktop{% endif %} is-half-touch" {{ block.locomotive_attributes }}>
            <h5 class="title">{{ block.settings.name }}</h5>

        {% else %}

          <a href="{{ block.settings.link }}" class="footer-link" {{ block.settings.link.new_window_attribute }} {{ block.locomotive_attributes }}>
            {{ block.settings.title }}
          </a>

        {% endif %}

        {% if forloop.last %}
          </div>
        {% endif %}

      {% endfor %}
    </div>
