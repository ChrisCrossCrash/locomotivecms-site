      .banner
        .row
          .col-xs-6
            %h3.text-right Discover Wagon
          .col-xs-6
            %h3.text-left Discover Station
      .buttons
        .row
          .left-half.col-xs-6
            %a.wagon-btn{href: "#"}
              Development
              %br.visible-xs
              tool
              %i.icon-chevron-circle-left.pull-left.hidden-xs
          .right-half.col-xs-6
            %a.station-btn{href: "#"}
              Back-End
              %br.visible-xs
              tool
              %i.icon-chevron-circle-right.pull-right.hidden-xs

    %section.open-source
      .container
        .row
          .col-md-5.col-md-offset-1
            %h2 Fully Open Source
            %p Locomotive CMS is a free software released under the MIT license. It’s also fully loved by a vibrant community of contributors and users. Checkout our GitHub repos and Google group!
            %p.links
              %a{href:"https://github.com/locomotivecms"}<
                GitHub Repositories
                %i.icon-angle-right
              %a{href:"https://groups.google.com/d/forum/locomotivecms"}<
                Google Group
                %i.icon-angle-right
          .col-md-5.icons
            %a.github{href:"https://github.com/locomotivecms"}<
              %img{alt: "GitHub", src: "{{ 'logos/github.png' | theme_image_url }}"}
            %span_.spacer.hidden-xs
            %a.google{href: "https://groups.google.com/d/forum/locomotivecms"}
              %img{alt: "GitHub", src: "{{ 'logos/google.png' | theme_image_url }}"}

    {% block 'text_testimonials' %}
    {% capture section_title %}
    {% editable_text "section_title", format: "raw", rows: 1, priority: 13 %}
    Trusted by smart companies
    {% endeditable_text %}
    {% endcapture %}
    %section.text-testimonials
      %h2 {{ section_title | escape }}
      %hr
      .container
        .row
          - 3.times do |index|
            -count = index + 1
            -position = 12 - 4*index
            {% capture testimonial_#{count}_source_name %}{% editable_text "source_name_#{count}", format: "raw", rows: 1, priority: #{position} %}Brian White{% endeditable_text %}{% endcapture %}
            {% capture testimonial_#{count}_source_company %}{% editable_text "source_company_#{count}", format: "raw", rows: 1, priority: #{position - 1} %}CEO Squared{% endeditable_text %}{% endcapture %}
            {% capture testimonial_#{count}_image %}{% editable_file "image_#{count}", priority: #{position - 2} %}images/stock_faces/two.png{% endeditable_file %}{% endcapture %}
            .col-md-4
              .blockquote
                .bubble
                  .icon
                    %i.icon-quote-left
                  {% editable_text "testimonial_#{count}", priority: #{position - 3} %}
                  <p>Nullam erat mi, lacinia vitae mauris at, sollicitudin luctus lorem. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Integer vitae orci sapien.</p>
                  {% endeditable_text %}
                %footer
                  %img{alt: "{{ testimonial_#{count}_source_name | escape }}, {{ testimonial_#{count}_source_company| escape }}", src: "{{ testimonial_#{count}_image | resize: '60x60#' }}"}
                  %span.name {{ testimonial_#{count}_source_name | escape }}
                  , {{ testimonial_#{count}_source_company | escape }}
        {% include 'logos' %}
    {% endblock %}

    {% block 'pro_tools' %}
    {% capture section_title %}
    {% editable_text "section_title", format: "raw", rows: 1, priority: 17 %}
    Pro Tools
    {% endeditable_text %}
    {% endcapture %}
    %section.pro-tools
      .container
        %h2 {{ section_title | escape }}
        %hr
        .row.tools
          - 4.times do |index|
            -count = index + 1
            -position = 16 - 4*index
            {% capture tool_#{count}_title %}
            {% editable_text "title_#{count}", format: "raw", rows: 1, priority: #{position} %}Station{% endeditable_text %}
            {% endcapture %}
            {% capture tool_#{count}_subtitle %}
            {% editable_text "subtitle_#{count}", format: "raw", rows: 1, priority: #{position - 1} %}Back-end{% endeditable_text %}
            {% endcapture %}
            {% capture tool_#{count}_url %}{% editable_text "url_#{count}", format: "raw", rows: 1, priority: #{position - 2} %}/{% endeditable_text %}{% endcapture %}
            .col-md-3.col-sm-6
              %h3
                {{ tool_#{count}_title | escape }}
                %small {{ tool_#{count}_subtitle | escape }}
              .description
                {% editable_text "description_#{count}", priority: #{position - 3} %}
                <p>Our development tool that lets you create sites with your favorite text and coding tools.</p>
                {% endeditable_text %}
              %a.go{href: "{{ tool_#{count}_url | escape }}"}<
                %i.icon-chevron-circle-right
    {% endblock %}
    {% endblock %}
    {% include 'footer' %}
    %script{type: "text/javascript", src: "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    %script{type: "text/javascript", src: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
