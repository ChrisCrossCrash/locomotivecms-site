{% extends "layouts/base" %}

{% block header %}
.container
  .jumbotron
    %h2.text-center {% editable_text "tagline", rows: 1, format: raw %}Develop your website 100% faster{% endeditable_text %}
    .sign-up.text-center
      %a{ href: 'https://station.locomotive.works/_app/sign_up', class: 'btn btn-primary btn-md round-button' }
        {% editable_text "button", rows: 1, format: raw %}Sign up today{% endeditable_text %}
        %i.fa.fa-arrow-circle-right
{% endblock %}

{% block sections %}
#technology.section
  .container{ role: 'section' }
    {% block technology %}
    .row
      .col-md-12
        %h3.text-center {% editable_text title, rows: 1, format: raw %}Our technology{% endeditable_text %}
        %hr

        .row
          .col-md-4.text-center
            .icon
              %i.fa.fa-download
            {% editable_text column_1 %}
            %h4 Install wagon
            %p
              Our development tool that lets you create sites with your favorite text and coding tools.
            {% endeditable_text %}

          .col-md-4.text-center
            .icon
              %i.fa.fa-puzzle-piece
            {% editable_text column_2 %}
            %h4 Create content
            %p
              Create custom content and freely mark what parts of pages are editable for clients.
            {% endeditable_text %}

          .col-md-4.text-center
            .icon
              %i.fa.fa-check-circle-o
            {% editable_text column_3 %}
            %h4 Deploy site
            %p
              With a single command, the back-office editor will be automatically generated for your client.
            {% endeditable_text %}

    {% endblock %}

#audience.section
  .container{ role: 'section' }
    {% block audience %}
    .row
      .col-md-12
        %h3.text-center {% editable_text title, rows: 1, format: raw %}The perfect tool for developers and designers{% endeditable_text %}
        %hr

        %p.image
          %img.img-responsive{ src: '{% editable_file banner %}/samples/pages/face_web.png{% endeditable_file %}' }

        .row
          .col-md-6.text-center
            {% editable_text column_1 %}
            %h4 Power to the coders
            %p
              Edit everything right on your computer with your text editor and source control system. Publish with a single command that syncs all your changes into server.

            %br

            %h4 Edit in style
            %p
              Clients love our back-office’s beautiful and intuitive interface where they can manage all of the site's content. And you can specify exactly what parts are editable.
            {% endeditable_text %}

          .col-md-6.text-center
            {% editable_text column_2 %}
            %h4 Structured content
            %p
              Locomotive CMS let’s you easily define custom content types with custom fields and relationships. No SQL, no muss, no fuss.
              %br
              %br

            %br

            %h4 Beginner friendly
            %p
              You won’t need to know PHP or SQL. Code pages using plain old HTML and the dead simple Liquid template language.

            {% endeditable_text %}

    {% endblock %}

#features.section
  .container{ role: 'section'}
    {% block features %}
    .row
      .col-md-12
        %h3.text-center {% editable_text title, rows: 1, format: raw %}Features{% endeditable_text %}
        %hr

        .row.list
          {% editable_model features %}
          {% for feature in contents.features %}
          .col-md-4.feature
            .media.text-center
              .media-object
                %img{ src: '{{ feature.icon.url | default: "http://placehold.it/64x64" }}' }
              .media-body
                %h4.media-heading {{ feature.name }}
                .text
                  {{ feature.description }}
          {% endfor %}
          {% endeditable_model %}

    {% endblock %}

#pricing.section
  .container{ role: 'section'}
    {% block pricing %}
    .row
      .col-md-12
        %h3.text-center {% editable_text title, rows: 1, format: raw %}Simple pricing{% endeditable_text %}
        %hr

        .text.text-center
          {% editable_text description %}
          %p All paid plans come with free upgrades, daily backups and templates.
          {% endeditable_text %}

        {% editable_model plans %}
        {% for plan in contents.plans %}

        {% capture plan_names %}
        {{ plan_names }}
        %th
          {{ plan.name }}
          %span.price {% if plan.price == 0 %}&nbsp;{% else %}{{ plan.price | money: "precision:0" }}<small>/mo</small>{% endif %}
        {% endcapture %}

        {% capture plan_descriptions %}
        {{ plan_descriptions }}
        %td {{ plan.description }}
        {% endcapture %}

        {% endfor %}
        {% endeditable_model %}

        %table.table
          %thead
            %tr {{ plan_names }}
          %tbody
            %tr.description {{ plan_descriptions }}
            %tr.common
              %td
              %td{ colspan: "{{ contents.plans.count | minus: 1 }}" }
                {% editable_text common %}
                %ul
                  %li Assets served through CDN
                  %li Daily backup in your Dropbox <span class="label label-default label-soon">coming soon</span>
                  %li
                {% endeditable_text %}

        .signup-now.text-center
          %a{ href: 'https://station.locomotive.works/_app/sign_up', class: 'btn btn-default round-button' }
            {% editable_text "Sign up button", format: raw, rows: 1 %}I want to try Locomotive{% endeditable_text %}
            %i.fa.fa-arrow-circle-right

    {% endblock %}

#testimonials.section
  .container{ role: 'section' }
    {% block testimonials %}
    .row
      .col-md-12
        %h3.text-center {% editable_text title, rows: 1, format: raw %}Hundreds of happy customers{% endeditable_text %}
        %hr

        .row.list
          {% editable_model testimonials %}
          {% for testimonial in contents.testimonials %}
          .col-md-4
            .blockquote
              .bubble
                .icon
                  %i.fa.fa-quote-left
                {{ testimonial.quote }}
              %footer
                %img{ src: "{{ testimonial.picture.url | default: 'https://placehold.it/60x60' | resize: '120x120#' }}", alt: "{{ testimonial.name }} {{ testimonial.title }}" }
                %p
                  %span.name> {{ testimonial.name }}
                  , {{ testimonial.title }}
          {% endfor %}
          {% endeditable_model %}

    {% endblock %}

#faq.section
  .container{ role: 'section' }
    {% block faq %}
    .row
      .col-md-12
        %h3.text-center {% editable_text title, rows: 1, format: raw %}What you should know{% endeditable_text %}
        %hr

        %ul.nav.nav-tabs{ role: 'tablist' }
          %li{ role: 'presentation', class: 'active' }
            %a{ href: '#faq-billing', data: { toggle: 'tab' }, role: 'tab' }
              %i.fa.fa-credit-card
              Billing
          %li{ role: 'presentation' }
            %a{ href: '#faq-account', data: { toggle: 'tab' }, role: 'tab' }
              %i.fa.fa-user
              Account
          %li{ role: 'presentation'  }
            %a{ href: '#faq-technical-questions', data: { toggle: 'tab' }, role: 'tab' }
              %i.fa.fa-cubes
              Technical question

        {% editable_model faq_items %}
        .tab-content
          #faq-billing.tab-pane.active{ role: 'tabpanel' }
            .row
              {% with_scope category: 'billing' %}
              {% for item in contents.faq_items %}
              .question.col-md-6
                %h4 {{ item.question }}
                .answer
                  {{ item.answer }}
              {% endfor %}
              {% endwith_scope %}

          #faq-account.tab-pane{ role: 'tabpanel' }
            .row
              {% with_scope category: 'account' %}
              {% for item in contents.faq_items %}
              .question.col-md-6
                %h4 {{ item.question }}
                .answer
                  {{ item.answer }}
              {% endfor %}
              {% endwith_scope %}

          #faq-technical-questions.tab-pane{ role: 'tabpanel' }
            .row
              {% with_scope category: 'technical questions' %}
              {% for item in contents.faq_items %}
              .question.col-md-6
                %h4 {{ item.question }}
                .answer
                  {{ item.answer }}
              {% endfor %}
              {% endwith_scope %}
        {% endeditable_model %}

    {% endblock %}

{% endblock %}
