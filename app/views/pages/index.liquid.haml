%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title {{ page.title }} | {{ site.name }}
    %meta{name: "keywords", value: "{{ site.meta_keywords }}"}
    %meta{name: "description", value: "{{ site.meta_description }}"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    {{ 'main.css' | stylesheet_tag }}
  %body{class: "{% if body_class %}{{ body_class }}{% else %}page-{{ page.slug }}{% endif %}"}
    {% block 'navigation' %}{% include 'navigation' %}{% endblock %}
    {% block 'main' %}
    {% block 'hero' %}

    {% capture hero_message %}
    {% editable_text "message", format: "raw", rows: "2" %}Love developing for your CMS as much as your clients love using it{% endeditable_text %}
    {% endcapture %}

    %section.hero
      .row
        .col-md-12
          %h1 {{ hero_message | escape }}
          .buttons.row
            .col-sm-4.col-sm-offset-2
              %a.start-trial-btn{href: "#"}
                Start your free trial now
                %i.icon-chevron-circle-right
            .col-sm-4
              %a.watch-video-btn{href: "#"}
                Watch our video
                %i.icon-play-video
    {% endblock %}

    {% block 'process' %}
    {% capture process_section_title %}
    {% editable_text "section_title", format: "raw", rows: 1, priority: 10 %}Our technology{% endeditable_text %}
    {% endcapture %}
    %section.process
      .container
        %h2 {{ process_section_title | escape }}
        %hr
        .row.steps
          -3.times do |index|
            -count = index + 1
            -position = 9 - (index*3)
            {% capture step_#{count}_title %}
            {% editable_text "title_#{count}", format: "raw", rows: 1, priority: #{position} %}Install wagon{% endeditable_text %}
            {% endcapture %}
            {% capture step_#{count}_image %}{% editable_file "image_#{count}", priority: #{position - 1} %}images/icons/arrow_on_disk.png{% endeditable_file %}{% endcapture %}
            .col-sm-4
              .number=count.times.map { "." }.join(" ")
              .icon<
                %img{src: "{{ step_#{count}_image | escape }}", alt: "Install Wagon"}
              %h3 {{ step_#{count}_title | escape }}
              {% editable_text "description_#{count}", priority: #{position - 2} %}
              <p>Our development tool that lets you create sites with your favorite text and coding tools.</p>
              {% endeditable_text %}
    {% endblock %}

    {% block 'benefits' %}

    {% capture benefits_section_title %}
    {% editable_text "section_title", format: "raw", rows: 1, priority: 9 %}The perfect tool for developers and designers{% endeditable_text %}
    {% endcapture %}

    -4.times do |index|
      -count = index + 1
      -position = 8 - index*2
      {% capture benefit_#{count}_title %}
      {% editable_text "title_#{count}", format: "raw", rows: 1, priority: #{position} %}Power to the coders{% endeditable_text %}
      {% endcapture %}

      {% capture benefit_#{count}_description %}
      {% editable_text "description_#{count}", priority: #{position - 1} %}
      <p>Edit everything right on your computer with your text editor and source control system. Publish with a single command that syncs all your changes into server.</p>
      {% endeditable_text %}
      {% endcapture %}

    %section.benefits
      .container
        %h2 {{ benefits_section_title | escape }}
        %hr
        .face-web
          {{ 'pages/home/face_web.png' | theme_image_tag }}
        .row
          .col-md-5.col-md-offset-1.col-sm-6
            %h3 {{ benefit_1_title | escape }}
            {{ benefit_1_description }}

          .col-md-5.col-sm-6
            %h3 {{ benefit_2_title | escape }}
            {{ benefit_2_description }}
        .row
          .col-md-5.col-md-offset-1.col-sm-6
            %h3 {{ benefit_3_title | escape }}
            {{ benefit_3_description }}
          .col-md-5.col-sm-6
            %h3 {{ benefit_4_title | escape }}
            {{ benefit_4_description }}
    {% endblock %}

    %section.video-testimonials
      %a.watch-testimonials-btn
        How our customers use it
        %i.icon-play-video

