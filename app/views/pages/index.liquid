{% extends "layouts/base" %}

{% block main %}

  {% section 'hero' %}

  {% section 'clients' %}

  {% section 'features' %}

  {% section 'quotes' %}

  {% section 'services' %}

{% endblock %}

  {% comment %}
  {% block header %}
  <header style="background: url({% editable_file 'home-header-image', resize: '1900x900#' %}/samples/pages/header-home.jpg{% endeditable_file %}) center center no-repeat;">
    <div class="grid grid-centered">
      <div class="grid-cell">
        {% include navigation %}
        <div class="header-content">
          <h1>{% editable_text "headline", format: raw, rows: 1 %}Craft websites that just work{% endeditable_text %}</h1>
          <p>{% editable_text "tagline", format: raw, rows: 3 %}Locomotive makes it super easy to develop and design exactly what your clients need.{% endeditable_text %}</p>
          <a href="https://station.locomotive.works/_app/sign_in" class="button button-success">
            {% editable_text "button", format: raw, rows: 1 %}
            Try for free
            {% endeditable_text %}
          </a>
        </div>
      </div>
    </div>
  </header>
  {% endblock %}

  <main>
    {% block newsletter %}
    <section class="is-light is-small">
      <div class="grid grid-centered">
        <div class="grid-cell is-centered">
          <div class="form-subscribe">
            <h5>{% editable_text "title", format: raw, rows: 1 %}Subscribe for super awesome occasional updates!{% endeditable_text %}</h5>
            {% capture subscribe_button %}{% editable_text "button", format: raw, rows: 1, inline_editing: false %}Subscribe{% endeditable_text %}{% endcapture %}
            {% include 'newsletter_form' with button_label: subscribe_button %}
          </div>
        </div>
      </div>
    </section>
    {% endblock %}
    {% block feature %}
    <section class="with-border">
      <div class="grid grid-centered">
        <div class="grid-cell with-8col is-middle">
          <img src="{% editable_file 'home-header-screen' %}/samples/pages/home-screen.png{% endeditable_file %}" alt="">
        </div>
        <div class="grid-cell with-4col is-middle">
          <div class="section-image-intro">
            <h2>{% editable_text "title", format: raw, rows: 1 %}An awesome user interface{% endeditable_text %}</h2>
            <div class="is-justified">
              {% editable_text "description", format: html, rows: 5, line_break: false %}
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
              <br><br>
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
              {% endeditable_text %}
            </div>
            <br/>
            <br/>
            <a href="{% path_to features %}" class="button button-primary">
              {% editable_text "button", format: raw, rows: 1 %}
                Discover all features
              {% endeditable_text %}
            </a>
          </div>
        </div>
      </div>
    </section>
    {% endblock %}

    {% block workflow %}
    <section class="section-dark">
      <div class="grid grid-centered">
        <div class="grid-cell is-centered">
          <h3 class="block-title">
            {% editable_text "title", format: raw, rows: 1 %}Super easy workflow{% endeditable_text %}
          </h3>
        </div>
        <div class="grid-cell with-4col">
          <div class="block">
            <i class="fa fa-cloud-download" aria-hidden="true"></i>
            <h5>{% editable_text "Step #1", format: raw, rows: 1 %}Install wagon{% endeditable_text %}</h5>
            <p>
              {% editable_text "Description #1", format: raw, rows: 3, line_break: false %}
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
              {% endeditable_text %}
            </p>
            <div class="block-dots">
              <span></span>
            </div>
          </div>
        </div>
        <div class="grid-cell with-4col">
          <div class="block">
            <i class="fa fa-paint-brush" aria-hidden="true"></i>
            <h5>{% editable_text "Step #2", format: raw, rows: 1 %}Craft your content{% endeditable_text %}</h5>
            <p>
              {% editable_text "Description #2", format: raw, rows: 3, line_break: false %}
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
              {% endeditable_text %}
            </p>
            <div class="block-dots">
              <span></span>
              <span></span>
            </div>
          </div>
        </div>
        <div class="grid-cell with-4col">
          <div class="block">
            <i class="fa fa-diamond" aria-hidden="true"></i>
            <h5>{% editable_text "Step #3", format: raw, rows: 1 %}Deploy website{% endeditable_text %}</h5>
            <p>
              {% editable_text "Description #3", format: raw, rows: 3, line_break: false %}
              Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
              {% endeditable_text %}
            </p>
            <div class="block-dots">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
        </div>
      </div>
    </section>
    {% endblock %}

    {% block testimonials %}
    <section class="section-testimonials" style="background: url({% editable_file 'home-background-testimonials', resize: '1900x900#' %}/samples/pages/home-testimonials.jpg{% endeditable_file %}) center center no-repeat;">
      <div class="grid grid-centered">
        <div class="grid-cell with-6col is-middle">
          <h1>{% editable_text "title", format: raw, rows: 3 %}Love developing for your CMS as much as your clients love using it{% endeditable_text %}</h1>
        </div>
        <div class="grid-cell with-6col is-middle">
          <div id="carousel-testimonials" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
              {% editable_model testimonials %}
                {% for testimonial in contents.testimonials %}
                  <div class="item {% if forloop.index0 == 0 %}active{% endif %}">
                    <div class="testimonial-wrapper">
                      <div class="testimonial">
                        <div class="testimonial-box">
                          {{ testimonial.quote }}
                          <a href="{% path_to testimonial %}" class="testimonial-read" title="Read full testimonial">
                            Read full testimonial
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                          </a>
                        </div>
                        <h6 class="testimonial-person">
                          <img src="{{ testimonial.picture.url | resize: '45x45#' }}" alt="{{ testimonial.name }}" />
                          <strong>
                            {{ testimonial.name }}
                            <span>{{ testimonial.company }}</span>
                          </strong>
                        </h6>
                      </div>
                    </div>
                  </div>
                {% endfor %}
                {% endeditable_model %}
            </div>
            <ol class="carousel-indicators">
              {% for testimonial in contents.testimonials %}
                <li data-target="#carousel-testimonials" data-slide-to="{{ forloop.index0 }}" class="{% if forloop.index0 == 0 %}active{% endif %}"></li>
              {% endfor %}
            </ol>
          </div>
        </div>
      </div>
      <div class="section-overlay"></div>
    </section>
    {% endblock %}

    {% block customers %}
    <section class="section-light">
      {% editable_model companies %}
        {% for company in contents.companies %}
          <img src="{{ company.logo.url | resize: 'x35' }}" alt="{{ company.name }}" />
        {% endfor %}
      {% endeditable_model %}
    </section>
    {% endblock %}

    {% block open_source %}
    <section>
      <div class="grid grid-centered">
        <div class="grid-cell is-centered">
          <div class="section-intro">
            <h2>{% editable_text "title", format: raw, rows: 1 %}Completely Open Source{% endeditable_text %}</h2>
            <p>
              {% editable_text "description", format: html, rows: 5, line_break: false %}
              Locomotive is completely Open Source. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.
              {% endeditable_text %}
            </p>
          </div>
        </div>
        <div class="grid-cell with-6col">
          <div class="block-tools is-right">
            <img src="{{ 'wagon.png' | theme_image_url }}" alt="" />
            <h4>Wagon</h4>
            <p>
              {% editable_text "Wagon description", format: html, rows: 5, line_break: false %}
              With Wagon, you can scaffold a new Locomotive site and start adding content types and templates you need using any text editor. And thanks to Wagon's built-in web server, you can preview the site with your prefered web browser.
              {% endeditable_text %}
            </p>
            <a href="https://github.com/locomotivecms/wagon" target="_blank" class="button button-primary">
              View on Github
            </a>
            <i>{% editable_text "Wagon version", format: raw, rows: 1 %}v2.1.1{% endeditable_text %}</i>
          </div>
        </div>
        <div class="grid-cell with-6col">
          <div class="block-tools">
            <img src="{{ 'engine.png' | theme_image_url }}" alt="" />
            <h4>Engine</h4>
            <p>
              {% editable_text "Engine description", format: html, rows: 5, line_break: false %}
              Engine is the Ruby on Rails application, it is dedicated to the creation and editing of content and managing all your sites. Next to that it offers a huge variety of features that helps you or your clients edit their sites with ease.
              {% endeditable_text %}
            </p>
            <a href="https://github.com/locomotivecms/engine" title="Engine" target="_blank" class="button button-primary">
              View on Github
            </a>
            <i>{% editable_text "Engine version", format: raw, rows: 1 %}v3.1.1{% endeditable_text %}</i>
          </div>
        </div>
      </div>
    </section>
    {% endblock %}
  </main>

  {% endcomment %}


{% comment %}
  {% block page_scripts %}
    {{ "vendor/carousel.js" | javascript_tag }}
  {% endblock %}
{% endcomment %}
