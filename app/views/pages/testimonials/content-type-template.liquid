---
title: Template of a testimonial
published: true
content_type: testimonials
---

{% extends "layouts/base" %}

{% block main %}
  <header style="background: url({{ testimonial.header_picture.url }}) center center no-repeat;">
    <div class="header-overlay">
      <div class="grid grid-centered">
        <div class="grid-cell">
          {% include navigation %}
          <div class="header-content is-small">
            <h1>{{ testimonial.name }}</h1>
            <p>{{ testimonial.company }}</p>
          </div>
        </div>
      </div>
    </div>
  </header>

  <section>
    <div class="grid grid-centered">
      <div class="grid-cell with-8col with-2off">
        <div class="testomonial-transcript">
          <h3>{% editable_text "title", format: raw, rows: 1 %}Full transcript{% endeditable_text %}</h3>
          {{ testimonial.video_transcript }}
          <br>
          <a href="{% path_to testimonials %}" class="testimonial-link is-left" title="Back to testimonials">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
            Back to testimonials
          </a>
        </div>
      </div>
    </div>
  </section>

{% endblock %}
