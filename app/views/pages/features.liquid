{% extends "layouts/base" %}

{% block main %}

  {% section 'simple_hero' %}

  {% section 'detailed_features' %}

  {% comment %}
  <header class="header-primary">
    <div class="grid grid-centered">
      <div class="grid-cell">
        {% include navigation %}
        {% block header %}
        <div class="header-content is-small">
          <h1>{% editable_text "headline", format: raw, rows: 1 %}Our features{% endeditable_text %}</h1>
          <p>
            {% editable_text "tagline", format: raw, rows: 3 %}
            Focus on what matters: front-end technology, standard development process and no learning time for your client.
            {% endeditable_text %}
          </p>
        </div>
        {% endblock %}
      </div>
    </div>
  </header>

  {% block features %}
    {% editable_model features %}
      {% for feature in contents.features %}
        {% assign left = forloop.index | modulo: 2 %}
        <section class="with-border">
          <div class="grid grid-centered">
            {% capture image %}
              <div class="grid-cell with-7col is-middle">
                <img src="{{ feature.image.url }}" alt="">
              </div>
            {% endcapture %}
            {% capture text %}
              <div class="grid-cell with-5col">
                <div class="section-image-intro">
                  <h2>{{ feature.name }}</h2>
                  <div class="is-justified">
                    {{ feature.description}}
                  </div>
                </div>
              </div>
            {% endcapture %}

            {% if left == 0 %}
              {{ image }}
              {{ text }}
            {% else %}
              {{ text }}
              {{ image }}
            {% endif %}
          </div>
        </section>
      {% endfor %}
    {% endeditable_model %}
  {% endblock %}

  {% block "contact-us" %}
    <section class="section-dark">
      <div class="grid grid-centered">
        <div class="grid-cell is-centered">
          <h3 class="block-title">
            {% editable_text "title", format: raw, rows: 1 %}
              Wondering if LocomotiveCMS does X,Y or Z?
            {% endeditable_text %}
          </h3>
        </div>
        <div class="grid-cell is-centered">
          <br/>
          <br/>
          <a href="mailto:contact@locomotivecms.com" class="button button-primary">
            {% editable_text "button", format: raw, rows: 1 %}
              Contact us!
            {% endeditable_text %}
          </a>
        </div>
      </div>
    </section>
  {% endblock %}

  {% endcomment %}

{% endblock %}
