{% extends 'index' %}

{% block 'main' %}

{% include 'page_head' %}

#main-blog
  {% assign sidebar_class = 'desktop' %}
  {% include 'sidebar' with sidebar_class %}
  %article.full-article
    %header
      %h1 {{ article.title }}
      {{ article.posted_at | localized_date: '%A %d %B %Y' }}
    {{ article.body }}
    .bottom
      %span.meta
        Posted by {{ article.author }}
  {% assign sidebar_class = 'mobile' %}
  {% include 'sidebar' with sidebar_class %}
  
{% endblock %}