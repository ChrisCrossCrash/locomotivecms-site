{% extends 'index' %}

{% block 'main' %}

%section#page-head
  .inner-container
    %h1
      {% editable_short_text "title", priority: 10 %}
      Our blog
      {% endeditable_short_text %}

#main-blog
  {% assign sidebar_class = 'desktop' %}
  {% include 'sidebar' with sidebar_class %}
  {% paginate contents.articles by 4 %}
  {% for article in paginate.collection %}
  {% include 'article_preview' %}
  {% endfor %}
  {% include 'pagination' %}
  {% endpaginate %}
  {% assign sidebar_class = 'mobile' %}
  {% include 'sidebar' with sidebar_class %}
{% endblock %}